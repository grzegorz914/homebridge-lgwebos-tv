{
  "pluginAlias": "LgWebOsTv",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "This plugin works with LG WebOS TV and are exposed to HomeKit as separate accessories and each needs to be manually paired.\n\n1. Open the Home <img src='https://user-images.githubusercontent.com/3979615/78010622-4ea1d380-738e-11ea-8a17-e6a465eeec35.png' height='16.42px'> app on your device.\n2. Tap the Home tab, then tap <img src='https://user-images.githubusercontent.com/3979615/78010869-9aed1380-738e-11ea-9644-9f46b3633026.png' height='16.42px'>.\n3. Tap *Add Accessory*, and select *I Don't Have a Code or Cannot Scan*.\n4. Enter the Homebridge PIN, this can be found under the QR code in Homebridge UI or your Homebridge logs, alternatively you can select *Use Camera* and scan the QR code again.",
  "footerDisplay": "This plugin works with LG WebOS TV which is available [here](https://github.com/grzegorz914/homebridge-lgwebos-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "title": "Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Device name",
              "type": "string",
              "default": "LG TV",
              "required": true
            },
            "host": {
              "title": "Address IP",
              "type": "string",
              "default": "192.168.1.8",
              "required": true,
              "format": "hostname"
            },
            "mac": {
              "title": "Adress Mac",
              "type": "string",
              "default": "ab:cd:ef:fe:dc:ba",
              "required": true
            },
            "refreshInterval": {
              "title": "Refresh interval (sec)",
              "type": "integer",
              "default": 5,
              "minimum": 0,
              "maximum": 60,
              "required": true
            },
            "disableLogInfo": {
              "title": "Disable log info",
              "type": "boolean",
              "default": false,
              "required": false,
              "description": "This disable log info, all values and state will not be displayed in Homebridge log console."
            },
            "volumeControl": {
              "title": "Volume control mode",
              "type": "integer",
              "minimum": 0,
              "maximum": 2,
              "description": "Here select what a volume control mode You want to use. If select *None* only hardware buttons in RC app can be used to control volume.",
              "oneOf": [
                {
                  "title": "None",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Slider",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Fan",
                  "enum": [
                    2
                  ]
                }
              ],
              "required": false
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": false,
              "required": false,
              "description": "This toggle behaviour for *I* button in RC app and *PowerModeSelection* in settings."
            },
            "inputs": {
              "title": "Inputs",
              "buttonText": "Add input",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Input name",
                    "type": "string",
                    "required": true
                  },
                  "reference": {
                    "title": "Input reference",
                    "type": "string",
                    "required": true
                  },
                  "type": {
                    "title": "Input type",
                    "type": "string",
                    "default": "APPLICATION",
                    "description": "Here select source input type.",
                    "oneOf": [
                      {
                        "title": "Other",
                        "enum": [
                          "OTHER"
                        ]
                      },
                      {
                        "title": "Home screen",
                        "enum": [
                          "HOME_SCREEN"
                        ]
                      },
                      {
                        "title": "Tuner",
                        "enum": [
                          "TUNER"
                        ]
                      },
                      {
                        "title": "HDMI",
                        "enum": [
                          "HDMI"
                        ]
                      },
                      {
                        "title": "Composite video",
                        "enum": [
                          "COMPOSITE_VIDEO"
                        ]
                      },
                      {
                        "title": "S Video",
                        "enum": [
                          "S_VIDEO"
                        ]
                      },
                      {
                        "title": "Component video",
                        "enum": [
                          "COMPONENT_VIDEO"
                        ]
                      },
                      {
                        "title": "Digital video input",
                        "enum": [
                          "DVI"
                        ]
                      },
                      {
                        "title": "Airplay",
                        "enum": [
                          "AIRPLAY"
                        ]
                      },
                      {
                        "title": "USB",
                        "enum": [
                          "USB"
                        ]
                      },
                      {
                        "title": "Application",
                        "enum": [
                          "APPLICATION"
                        ]
                      }
                    ],
                    "required": true
                  },
                  "mode": {
                    "title": "Input mode",
                    "type": "integer",
                    "default": 0,
                    "maximum": 1,
                    "description": "Here select what a input mode You defined.",
                    "oneOf": [
                      {
                        "title": "Apps",
                        "enum": [
                          0
                        ]
                      },
                      {
                        "title": "Live TV",
                        "enum": [
                          1
                        ]
                      }
                    ],
                    "required": false
                  }
                }
              }
            },
            "manufacturer": {
              "name": "Manufacturer",
              "type": "string",
              "placeholder": "Manufacturer",
              "description": "Set the manufacturer name.",
              "required": false
            },
            "modelName": {
              "name": "Model",
              "type": "string",
              "placeholder": "Model",
              "description": "Set the model name.",
              "required": false
            },
            "serialNumber": {
              "name": "Serial Number",
              "type": "string",
              "placeholder": "SerialNumber",
              "description": "Set the serial number.",
              "required": false
            },
            "firmwareRevision": {
              "name": "Firmware Revision",
              "type": "string",
              "placeholder": "Firmware Revision",
              "description": "Set the firmware revision.",
              "required": false
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "key": "devices",
      "type": "tabarray",
      "title": "{{ value.name || 'new device' }}",
      "items": [
        "devices[].name",
        "devices[].host",
        "devices[].mac",
        {
          "key": "devices[]",
          "type": "section",
          "title": "Inputs",
          "expandable": true,
          "expanded": false,
          "items": [
            {
              "key": "devices[].inputs",
              "type": "array",
              "orderable": false,
              "buttonText": "Add input",
              "items": [
                "devices[].inputs[].name",
                "devices[].inputs[].reference",
                "devices[].inputs[].type",
                "devices[].inputs[].mode"
              ]
            }
          ]
        },
        {
          "key": "devices[]",
          "type": "section",
          "title": "Advanced Settings",
          "expandable": true,
          "expanded": false,
          "items": [
            "devices[].disableLogInfo",
            "devices[].refreshInterval",
            "devices[].switchInfoMenu",
            "devices[].volumeControl"
          ]
        },
        {
          "key": "devices[]",
          "type": "section",
          "title": "Branding",
          "expandable": true,
          "expanded": false,
          "items": [
            "devices[].manufacturer",
            "devices[].modelName",
            "devices[].serialNumber",
            "devices[].firmwareRevision"
          ]
        }
      ]
    }
  ]
}