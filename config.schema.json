{
  "pluginAlias": "LgWebOsTv",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "This plugin works with Xbox game Consoles and are exposed to HomeKit as separate accessories and each needs to be manually paired.\n\n1. Open the Home <img src='https://user-images.githubusercontent.com/3979615/78010622-4ea1d380-738e-11ea-8a17-e6a465eeec35.png' height='16.42px'> app on your device.\n2. Tap the <img src='https://user-images.githubusercontent.com/3979615/78010869-9aed1380-738e-11ea-9644-9f46b3633026.png' height='16.42px'>.\n3. Tap *Add Accessory*, and select *I Don't Have a Code or Cannot Scan* or *More Options*.\n4. Select Your accessory.\n5. Enter the Homebridge PIN or scan the QR code, this can be found in Homebridge UI or Homebridge logs.\n6. Complete the accessory setup.",
  "footerDisplay": "For documentation please see [GitHub repository](https://github.com/grzegorz914/homebridge-lgwebos-tv).",
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "placeholder": "LG TV",
              "required": true
            },
            "host": {
              "title": "IP/Hostname",
              "type": "string",
              "placeholder": "192.168.1.8",
              "format": "hostname",
              "required": true
            },
            "mac": {
              "title": "Address Mac",
              "type": "string",
              "placeholder": "ab:cd:ef:fe:dc:ba",
              "required": true
            },
            "refreshInterval": {
              "title": "Reconnect time",
              "type": "integer",
              "default": 2500,
              "minimum": 0,
              "maximum": 60000,
              "description": "Here set the reconnect time to device in (ms), default is every 2500ms.",
              "required": true
            },
            "disableLogInfo": {
              "title": "Disable log info",
              "type": "boolean",
              "default": false,
              "description": "This disable log info, all values and state will not be displayed in Homebridge log console.",
              "required": false
            },
            "volumeControl": {
              "title": "Volume control",
              "type": "integer",
              "minimum": 0,
              "maximum": 2,
              "description": "Here select what a volume control mode You want to use. If select *None* only hardware buttons in RC app can be used to control volume.",
              "oneOf": [{
                  "title": "None",
                  "enum": [
                    0
                  ]
                },
                {
                  "title": "Slider",
                  "enum": [
                    1
                  ]
                },
                {
                  "title": "Fan",
                  "enum": [
                    2
                  ]
                }
              ],
              "required": true
            },
            "switchInfoMenu": {
              "title": "Switch Info/Menu",
              "type": "boolean",
              "default": false,
              "description": "This toggle behaviour for *I* button in RC app and *PowerModeSelection* in settings.",
              "required": false
            },
            "getInputsFromDevice": {
              "title": "Load inputs from device",
              "type": "boolean",
              "default": false,
              "description": "This function get all available inputs direct from device, manually configured inputs will be skipped.",
              "required": false
            },
            "filterSystemApps": {
              "title": "Hide System Apps",
              "type": "boolean",
              "default": false,
              "description": "If enabled, all System Apps will not be displayed on the list of inputs.",
              "required": false,
              "condition": {
                "functionBody": "return model.devices[arrayIndices].getInputsFromDevice === true"
              }
            },
            "inputs": {
              "type": "array",
              "items": {
                "title": "Input",
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "placeholder": "Name",
                    "description": "Here set Your own name.",
                    "required": true
                  },
                  "reference": {
                    "title": "Reference",
                    "type": "string",
                    "placeholder": "Input/App, Channel reference",
                    "description": "Here set the Input/App, Channel reference.",
                    "required": true
                  },
                  "type": {
                    "title": "Type",
                    "type": "string",
                    "description": "Here select the source type.",
                    "oneOf": [{
                        "title": "Other",
                        "enum": [
                          "OTHER"
                        ]
                      },
                      {
                        "title": "Home screen",
                        "enum": [
                          "HOME_SCREEN"
                        ]
                      },
                      {
                        "title": "Tuner",
                        "enum": [
                          "TUNER"
                        ]
                      },
                      {
                        "title": "HDMI",
                        "enum": [
                          "HDMI"
                        ]
                      },
                      {
                        "title": "Composite video",
                        "enum": [
                          "COMPOSITE_VIDEO"
                        ]
                      },
                      {
                        "title": "S Video",
                        "enum": [
                          "S_VIDEO"
                        ]
                      },
                      {
                        "title": "Component video",
                        "enum": [
                          "COMPONENT_VIDEO"
                        ]
                      },
                      {
                        "title": "Digital video input",
                        "enum": [
                          "DVI"
                        ]
                      },
                      {
                        "title": "Airplay",
                        "enum": [
                          "AIRPLAY"
                        ]
                      },
                      {
                        "title": "USB",
                        "enum": [
                          "USB"
                        ]
                      },
                      {
                        "title": "Application",
                        "enum": [
                          "APPLICATION"
                        ]
                      }
                    ],
                    "required": true
                  },
                  "mode": {
                    "title": "Mode",
                    "type": "integer",
                    "maximum": 1,
                    "description": "Here select the function mode.",
                    "oneOf": [{
                        "title": "Input/App",
                        "enum": [
                          0
                        ]
                      },
                      {
                        "title": "Live TV Channel",
                        "enum": [
                          1
                        ]
                      }
                    ],
                    "required": true
                  }
                }
              }
            },
            "buttons": {
              "type": "array",
              "items": {
                "title": "Button",
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "placeholder": "Name",
                    "description": "Here set Your own name.",
                    "required": false
                  },
                  "reference": {
                    "title": "Reference",
                    "type": "string",
                    "placeholder": "Input/App, Channel reference",
                    "description": "Here set the Input/App, Channel reference.",
                    "required": false
                  },
                  "mode": {
                    "title": "Mode",
                    "type": "integer",
                    "maximum": 1,
                    "description": "Here select the function mode.",
                    "oneOf": [{
                        "title": "Input/App",
                        "enum": [
                          0
                        ]
                      },
                      {
                        "title": "Live TV Channel",
                        "enum": [
                          1
                        ]
                      }
                    ],
                    "required": true
                  }
                }
              }
            },
            "pictureModeControl": {
              "title": "Picture",
              "type": "boolean",
              "default": false,
              "description": "This enable possibility control of picture mode.",
              "required": false
            },
            "pictureModes": {
              "title": "Picture Mode",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "title": "Name",
                    "type": "string",
                    "placeholder": "Picture Mode Name",
                    "description": "Here set Your own picture mode name.",

                    "required": true
                  },
                  "reference": {
                    "title": "Mode",
                    "type": "string",
                    "description": "Here choice the picture mode.",
                    "oneOf": [{
                        "title": "Normal",
                        "enum": [
                          "normal"
                        ]
                      },
                      {
                        "title": "Cinema",
                        "enum": [
                          "cinema"
                        ]
                      },
                      {
                        "title": "Eco",
                        "enum": [
                          "eco"
                        ]
                      },
                      {
                        "title": "Game",
                        "enum": [
                          "game"
                        ]
                      },
                      {
                        "title": "Photo",
                        "enum": [
                          "photo"
                        ]
                      },
                      {
                        "title": "Sports",
                        "enum": [
                          "sports"
                        ]
                      },
                      {
                        "title": "Vivid",
                        "enum": [
                          "vivid"
                        ]
                      },
                      {
                        "title": "Technicolor",
                        "enum": [
                          "technicoloro"
                        ]
                      },
                      {
                        "title": "Filmmaker",
                        "enum": [
                          "filmmaker"
                        ]
                      },
                      {
                        "title": "HDR Effect",
                        "enum": [
                          "hdrEffect"
                        ]
                      },
                      {
                        "title": "HDR Standard",
                        "enum": [
                          "hdrStandard"
                        ]
                      },
                      {
                        "title": "HDR Vivid",
                        "enum": [
                          "hdrVivid"
                        ]
                      },
                      {
                        "title": "HDR Cinema",
                        "enum": [
                          "hdrCinemarmal"
                        ]
                      },
                      {
                        "title": "HDR Cinema Bright",
                        "enum": [
                          "hdrCinemaBright"
                        ]
                      },
                      {
                        "title": "HDR External",
                        "enum": [
                          "hdrExternal"
                        ]
                      },
                      {
                        "title": "HDR Technicolor",
                        "enum": [
                          "hdrTechnicolor"
                        ]
                      },
                      {
                        "title": "Dolby Standard",
                        "enum": [
                          "dolbyStandard"
                        ]
                      },
                      {
                        "title": "Dolby HDR Standard",
                        "enum": [
                          "dolbyHdrStandard"
                        ]
                      },
                      {
                        "title": "Dolby HDR Cinema",
                        "enum": [
                          "dolbyHdrCinema"
                        ]
                      },
                      {
                        "title": "Dolby HDR Cinema Bright",
                        "enum": [
                          "dolbyHdrCinemaBright"
                        ]
                      },
                      {
                        "title": "Dolby HDR Cinema Dark",
                        "enum": [
                          "dolbyHdrDarkAmazon"
                        ]
                      },
                      {
                        "title": "Dolby HDR Game",
                        "enum": [
                          "dolbyHdrGame"
                        ]
                      },
                      {
                        "title": "Expert 1",
                        "enum": [
                          "expert1"
                        ]
                      },
                      {
                        "title": "Expert 2",
                        "enum": [
                          "expert2"
                        ]
                      }
                    ],
                    "required": true
                  }
                }
              },
              "condition": {
                "functionBody": "return model.devices[arrayIndices].pictureModeControl === true"
              }
            },
            "brightnessControl": {
              "title": "Brightness",
              "type": "boolean",
              "default": false,
              "description": "This enable possibility adjust the Brightness.",
              "required": false
            },
            "backlightControl": {
              "title": "Backlight",
              "type": "boolean",
              "default": false,
              "description": "This enable possibility adjust the Backlight.",
              "required": false
            },
            "contrastControl": {
              "title": "Contrast",
              "type": "boolean",
              "default": false,
              "description": "This enable possibility adjust the Contrast.",
              "required": false
            },
            "colorControl": {
              "title": "Color",
              "type": "boolean",
              "default": false,
              "description": "This enable possibility adjust the Color.",
              "required": false
            },
            "manufacturer": {
              "name": "Manufacturer",
              "type": "string",
              "placeholder": "Manufacturer",
              "description": "Here optionally set the manufacturer name.",
              "required": false
            },
            "modelName": {
              "name": "Model",
              "type": "string",
              "placeholder": "Model",
              "description": "Here optionally set the model name.",
              "required": false
            },
            "serialNumber": {
              "name": "Serial Number",
              "type": "string",
              "placeholder": "SerialNumber",
              "description": "Here optionally set the serial number.",
              "required": false
            },
            "firmwareRevision": {
              "name": "Firmware Revision",
              "type": "string",
              "placeholder": "Firmware Revision",
              "description": "Here optionally set the firmware revision.",
              "required": false
            }
          }
        }
      }
    }
  },
  "layout": [{
    "key": "devices",
    "type": "tabarray",
    "title": "{{ value.name || 'new device' }}",
    "items": [
      "devices[].name",
      "devices[].host",
      "devices[].mac",
      {
        "key": "devices[]",
        "type": "section",
        "title": "Inputs",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].getInputsFromDevice",
          "devices[].filterSystemApps",
          {
            "key": "devices[].inputs",
            "type": "tabarray",
            "title": "{{ value.name || 'new input' }}",
            "items": [
              "devices[].inputs[].name",
              "devices[].inputs[].reference",
              "devices[].inputs[].type",
              "devices[].inputs[].mode"
            ],
            "condition": {
              "functionBody": "return model.devices[arrayIndices].getInputsFromDevice === false;"
            }
          }
        ]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Buttons",
        "expandable": true,
        "expanded": false,
        "items": [{
          "key": "devices[].buttons",
          "type": "tabarray",
          "title": "{{ value.name || 'new button' }}",
          "items": [
            "devices[].buttons[].name",
            "devices[].buttons[].reference",
            "devices[].buttons[].mode"
          ]
        }]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Picture Control",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].brightnessControl",
          "devices[].backlightControl",
          "devices[].contrastControl",
          "devices[].colorControl",
          "devices[].pictureModeControl",
          {
            "items": [{
              "key": "devices[].pictureModes",
              "type": "tabarray",
              "title": "{{ value.name || 'new mode' }}",
              "items": [
                "devices[].pictureModes[].name",
                "devices[].pictureModes[].reference"
              ]
            }]
          }
        ],
        "condition": {
          "functionBody": "return model.devices[arrayIndices].pictureModeControl === true;"
        }
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Advanced Settings",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].disableLogInfo",
          "devices[].switchInfoMenu",
          "devices[].refreshInterval",
          "devices[].volumeControl"
        ]
      },
      {
        "key": "devices[]",
        "type": "section",
        "title": "Branding",
        "expandable": true,
        "expanded": false,
        "items": [
          "devices[].manufacturer",
          "devices[].modelName",
          "devices[].serialNumber",
          "devices[].firmwareRevision"
        ]
      }
    ]
  }]
}